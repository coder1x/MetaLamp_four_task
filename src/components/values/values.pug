include ../text-field/text-field.pug

mixin values(options = {})
  -
    const {
      label = '',
      modifier = '',
      addClass = '',
      isLabeled,
    } = options;

    const classComponent = 'values'
    let className = classComponent
    
    if(modifier){
      className += ` ${classComponent}_${modifier}`
    }
    if(addClass){
      className += ` ${addClass}`
    }

    const data = require('./values.json');

    const textField = data.textField
    
  fieldset(class=`${className} js-${classComponent}`)
    - if(!isLabeled){
        legend(class=`${classComponent}__label`)= label
    -}

    div(class=`${classComponent}__min-wrap js-${classComponent}__min-wrap`)
      +text-field(textField.min)

    div(class=`${classComponent}__max-wrap js-${classComponent}__max-wrap`)
      +text-field(textField.max)

    div(class=`${classComponent}__from-wrap js-${classComponent}__from-wrap`)
      +text-field(textField.from)

    div(class=`${classComponent}__to-wrap js-${classComponent}__to-wrap`)
      +text-field(textField.to)

    div(class=`${classComponent}__step-wrap js-${classComponent}__step-wrap`)
      +text-field(textField.step)