include ../text-field/text-field.pug

mixin values(options)
  -
    const label = options.label ?? ''
    const modify = options.modify ?? ''
    const addClass = options.class ?? ''
    const flLabel = options.flLabel ?? false
    const classComp = 'values'
    let className = classComp
    
    if(modify){
    className += ` ${classComp}_${modify}`}
    if(addClass){
    className += ` ${addClass}`}

    const path = '/components/values/values.json' 
    const data = htmlWebpackPlugin.options.getData(path)
    const textField = data.textField
    
  fieldset(class=`${className} js-${classComp}`)
    - if(!flLabel){
    legend(class=`${classComp}__label`)= label
    -}

    div(class=`${classComp}__min-wrap js-${classComp}__min-wrap`)
      +text-field(textField.min)

    div(class=`${classComp}__max-wrap js-${classComp}__max-wrap`)
      +text-field(textField.max)

    div(class=`${classComp}__from-wrap js-${classComp}__from-wrap`)
      +text-field(textField.from)

    div(class=`${classComp}__to-wrap js-${classComp}__to-wrap`)
      +text-field(textField.to)

    div(class=`${classComp}__step-wrap js-${classComp}__step-wrap`)
      +text-field(textField.step)