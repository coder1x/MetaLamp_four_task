include ../text-field/text-field.pug

mixin input-data(label = '')
  -
    const BASE_CLASS = 'input-data'
    
  fieldset(class=`${BASE_CLASS} js-${BASE_CLASS}`)
    if label
      legend(class=`${BASE_CLASS}__label`)= label
    
    div(class=`${BASE_CLASS}__value-wrapper`)
      +text-field({
        label: 'value',
        typeField: 'text',
        name: 'value'
      })