include ../values/values.pug
include ../hints/hints.pug
include ../grid/grid.pug
include ../input-data/input-data.pug
include ../different/different.pug
include ../code/code.pug
include ../keyboard-control/keyboard-control.pug

mixin panel(options = {})
  -
    const {
      modifier = '',
      addClass = '',
      theme = 'base',
    } = options;

    const classComponent = 'panel'
    let className = classComponent
    
    if(modifier){
      className += ` ${classComponent}_${modifier}`
    }
    if(addClass){
      className += ` ${addClass}`
    }

  div(class=`${className} js-${classComponent}`)
    div(class=`${classComponent}__slider-wrapper js-${classComponent}__slider-wrapper`)
      input(class=`rslider__${theme} visually-hidden` 
      type='text' 
      name='DATA' 
      value='' 
      tabindex='-2' 
      readonly=''
      )

    div(class=`${classComponent}__values-wrapper`)
      +values({label: 'Values',})

    div(class=`${classComponent}__input-data-wrapper`)
      +input-data({label: 'Input data',})

    div(class=`${classComponent}__keyboard-control-wrapper`)
      +keyboard-control({label: 'keyboard control',})

    div(class=`${classComponent}__grid-wrapper`)
      +grid({label: 'Grid',})

    div(class=`${classComponent}__different-wrapper`)
      +different({label: 'Different',})

    div(class=`${classComponent}__hints-wrapper`)
      +hints({label: 'Hints',})
      
    div(class=`${classComponent}__code-wrapper`)
      +code({label: 'Config code',})