include ../toggle/toggle.pug
include ../text-field/text-field.pug

mixin hints(options = {})
  -
    const {
      label = '',
      modifier = '',
      addClass = '',
      isLabeled,
    } = options;

    const CLASS_COMPONENT = 'hints'
    let className = CLASS_COMPONENT
    
    if(modifier){
      className += ` ${CLASS_COMPONENT}_${modifier}`
    }
    if(addClass){
      className += ` ${addClass}`
    }

    const data = require('./hints.json'); 
    const textField = data.textField

  fieldset(class=`${className} js-${CLASS_COMPONENT}`)
    - if(!isLabeled){
        legend(class=`${CLASS_COMPONENT}__label`)= label
    -}

    div(class=`${CLASS_COMPONENT}__minmax-wrapper js-${CLASS_COMPONENT}__minmax-wrapper`)
      +toggle({
        header: 'min - max',
      })

    div(class=`${CLASS_COMPONENT}__fromto-wrapper js-${CLASS_COMPONENT}__fromto-wrapper`)
      +toggle({
        header: 'from - to',
      })

    div(class=`${CLASS_COMPONENT}__prefix-wrapper js-${CLASS_COMPONENT}__prefix-wrapper`)
      +text-field(textField.prefix)
      
    div(class=`${CLASS_COMPONENT}__postfix-wrapper js-${CLASS_COMPONENT}__postfix-wrapper`)
      +text-field(textField.postfix)